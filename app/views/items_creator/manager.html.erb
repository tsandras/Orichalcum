  function rect(x,y,w,h) {
    ctx5.beginPath();
    ctx5.rect(x,y,w,h);
    ctx5.closePath();
    ctx5.fill();
  } 
   
  function clear() {
    ctx5.clearRect(0, 0, WIDTH5, HEIGHT5);
  }

  function init() {
    canvas5 = document.getElementById("canvas5");
    ctx5 = canvas5.getContext("2d");
    draw5();
    return setInterval(draw5, 10);
  }   

  function draw5() {
    clear();
    ctx5.fillStyle = "#FAF7F8";
    rect(0,0,WIDTH5,HEIGHT5);
    ctx5.fillStyle = "#444444";
    drawLine();
    rect(x5 - 15, y5 - 15, 30, 30);
  }

  function drawLine() {
    ctx5.beginPath();
    ctx5.moveTo(0,0);
    ctx5.lineTo(200,10);
    ctx5.stroke(); 
  }

  function myMove(e){
   if (dragok){
    x5 = e.pageX - canvas5.offsetLeft;
    y5 = e.pageY - canvas5.offsetTop;
   }
  }

  function myDown(e){
   if (e.pageX < x5 + 15 + canvas5.offsetLeft)
    if (e.pageX > x5 - 15 + canvas5.offsetLeft)
      if (e.pageY < y5 + 15 + canvas5.offsetTop)
        if (e.pageY > y5 -15 + canvas5.offsetTop){
          $('#canvas5').css('cursor','pointer')
          x5 = e.pageX - canvas5.offsetLeft;
          y5 = e.pageY - canvas5.offsetTop;
          dragok = true;
          canvas5.onmousemove = myMove;
   }
  }

  function myUp(){
    $('#canvas5').css('cursor','auto')
    dragok = false;
    canvas5.onmousemove = null;
  }

  function Template(context, templateData, x, y) {
    this.x = x;
    this.y = y;
    this.ctx = context;
    this.id = templateData.id;
    this.data = templateData;
    this.image = new Image();
    this.image.src = templateData.image_thumb_url
    this.getCenter = function() {
      return {x: this.x + 25, y: this.y + 25};
    };
    this.draw = function() {
      ctx.beginPath();
      ctx.rect(this.x,this.y,50,50);
      ctx.stroke();
      // this.image.onload = function(){
      // this.image.onload = function() {
      this.ctx.drawImage(this.image, this.x, this.y);
      // }
      // }
    }
  }

  function TemplatesTree(context, tree, xroot, yroot) {
    this.ctx = context;
    this.xroot = xroot;
    this.yroot = yroot;
    var getPositionOfFirst = function(nbsComponents, x) {
      var half = Math.round(nbsComponents / 2);
      return x - (half + 1) * 100;
    }
    var constructTree = function(tree, x, y) {
      var noeud = { 
        template: new Template(this.ctx, tree.template, x, y),
        components: [] 
      }
      var nbsComponents = tree.components.length
      var xtemp = getPositionOfFirst(nbsComponents, x)
      var i = 1;
      tree.components.forEach(function(component) {
        if (nbsComponents % 2 == 0 && i == 2) {
          xtemp = xtemp + 200;
        } else {
          xtemp = xtemp + 100;
        }
        i++;
        noeud.components.push(constructTree(component, xtemp, y + 100))
      });
      return noeud;
    }
    this.tree = constructTree(tree, this.xroot, this.yroot);
    var connectTwoTemplates = function(t1, t2) {
      ctx.beginPath();
      ctx.moveTo(t1.getCenter().x,t1.getCenter().y);
      ctx.lineTo(t2.getCenter().x,t2.getCenter().y);
      ctx.stroke(); 
    }
    this.draw = function draw(tree) {
      tree.template.draw();
      tree.components.forEach(function(component) {
        draw(component);
        connectTwoTemplates(tree.template, component.template)
      });
    }
  }

  $('#template_id').change(function() {
